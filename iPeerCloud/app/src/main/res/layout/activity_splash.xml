<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"
    tools:context="com.ui.goonzs.com.ipeercloud.com.MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_widthPercent="38%w"
        app:layout_heightPercent="38%w"
        android:src="@mipmap/logo"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="15%h"
        />

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        app:layout_heightPercent="15%h"
        app:layout_marginBottomPercent="18%h"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_signup"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/sign_up"
            android:textColor="#111111"
            android:gravity="center_vertical"
            app:layout_marginLeftPercent="2.5%w"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#e1e1e1"
            app:layout_marginLeftPercent="2.5%w"
            />
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/log_in"
            android:textColor="#111111"
            android:gravity="center_vertical"
            app:layout_marginLeftPercent="2.5%w"
            />
    </com.zhy.android.percent.support.PercentLinearLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>
